@page
@model WebApplication2.Pages.Categories.DeleteModel
@{
}

<form method="post">
    <input hidden asp-for="Category.CategoryId" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Category</h2>
            <hr />
            
            <div class="mb-3">
                <label asp-for="Category.Name"></label>
                <input asp-for="@Model.Category.Name" class="form-control" disabled />
                
            </div>
            <div class="mb-3">
                <label asp-for="Category.DisplayOrder"></label>
                <input asp-for="@Model.Category.DisplayOrder" class="form-control" disabled />
                
            </div>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
    </div>
</form>

@section scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
